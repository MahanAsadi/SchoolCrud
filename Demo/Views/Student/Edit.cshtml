<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    @{ 
        Demo.Data.Student student = ViewBag.item as Demo.Data.Student;
    }

    <div class="container bg-warning">
        <h2>ویرایش دانش آموز</h2>
        <form action="#" method="post">
            <div class="form-group">
                <label for="name">نام:</label>
                <input type="text" class="form-control" value="@student.Name" id="name" placeholder="نام را وارد کنید" name="name">
            </div>

            <div class="form-group">
                <label for="surname">نام خانوادگی:</label>
                <input type="text" class="form-control" value="@student.Surname" id="surname" placeholder="نام خانوادگی را وارد کنید" name="surname">
            </div>

            <div class="form-group">
                <label for="age">سن:</label>
                <input type="number" class="form-control" value="@student.Age" id="age" placeholder="سن را وارد کنید" name="age">
            </div>
            <input type="hidden" name="StudentId" value="@student.StudentId" />
            <button type="submit" class="btn btn-default">ویرایش</button>
        </form>
    </div>

</body>
</html>
